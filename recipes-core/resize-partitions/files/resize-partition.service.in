[Unit]
Description=Check and recreate ext4 file system on %i
Before=var-persist.mount
BindsTo=dev-disk-by\x2dpartlabel-%i.device
After=dev-disk-by\x2dpartlabel-%i.device
DefaultDependencies=no
StartLimitBurst=5

[Service]
Type=oneshot
RemainAfterExit=yes
Restart=on-failure
RestartSec=1
ExecStart=/bin/sh -c "/sbin/e2fsck -n /dev/disk/by-partlabel/%i; if [ $? -gt 1 ]; then /sbin/mkfs.ext4 /dev/disk/by-partlabel/%i; fi; /sbin/resize2fs /dev/disk/by-partlabel/%i"

[Install]
WantedBy=local-fs-pre.target
